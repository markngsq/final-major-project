{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true,
      "modules": true
    }
  },
  "plugins": [
    "react"
  ],
  // Environments
  "env": {
    "browser": true,
    "amd": true,
    "jquery": true,
    "node": true,
    "es6": true
  },
  "globals": {
    "__DEV__": true,
    "__SERVER__": true
  },
  "rules": {
    // Turn off these rules for now.
    "camelcase": 0,
    "comma-dangle": 0,
    "comma-spacing": 0,
    "consistent-return": 0,
    "dot-notation": 0,
    "eol-last": 0,
    "handle-callback-err": 0,
    "key-spacing": 0,
    "new-cap": 0,
    "no-cond-assign": 0,
    "no-constant-condition": 0,
    "no-empty": 0,
    "no-extra-boolean-cast": 0,
    "no-mixed-requires": 0,
    "no-multi-spaces": 0,
    "no-new": 0,
    "no-return-assign": 0,
    "no-shadow": 0,
    "no-unused-vars": 0,
    "no-use-before-define": 0,
    "semi-spacing": 0,
    "space-infix-ops": 0,
    "space-unary-ops": 0,
    "yoda": 0,

    // RELAX
    "no-underscore-dangle": 0,
    "wrap-iife": 0,
    "strict": 0,
    "no-unused-expressions": 0,

    // WARN
    "max-len": [1, 300, 4],

    // ERROR
    "eqeqeq": [2, "allow-null"],
    "guard-for-in": 2,
    "complexity": [2,15],
    "max-depth": [2,4],
    "no-caller": 2,
    "no-undef": 2,
    "no-trailing-spaces": 2,
    "one-var": [2, "never"],
    "curly": 2,

    // Code style
    "indent": [2, 2],
    "quotes": [2, "single"],

    // React
    "jsx-quotes": 1,
    "react/display-name": 0,
    "react/jsx-boolean-value": 1,
    "react/jsx-no-undef": 1,
    "react/jsx-sort-prop-types": 0,
    "react/jsx-sort-props": 0,
    "react/jsx-uses-react": 1,
    "react/jsx-uses-vars": 1,
    "react/no-did-mount-set-state": 1,
    "react/no-did-update-set-state": 1,
    "react/no-multi-comp": 1,
    "react/no-unknown-property": 1,
    "react/prop-types": 0,
    "react/react-in-jsx-scope": 1,
    "react/self-closing-comp": 1,
    "react/sort-comp": 1,
    "react/wrap-multilines": 1
  }
}
